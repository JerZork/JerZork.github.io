---
import siteConfig from '../data/site-config';
import Button from './Button.astro';
import MatrixBg from './MatrixBg.astro';

const hero = siteConfig.hero;
---

{
    (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
        <section class="relative flex items-center overflow-hidden py-14 lg:py-16 min-h-screen bg-[#0a0a14]">
            <div class="absolute inset-0 -z-10 bg-gradient-to-b from-[#0a0a14] via-[#14121a] to-[#1a0f2e]">
                <div class="absolute inset-0 bg-circuit opacity-20"></div>
                <MatrixBg />
            </div>
            
            <div class="max-w-7xl mx-auto px-4 lg:px-8 w-full">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <!-- Left column: Text content -->
                    <div class="text-white space-y-6">
                        {hero.title && (
                            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight">
                                <span class="block">Building</span>
                                <span class="block gradient-text">Digital</span>
                                <span class="block">Solutions</span>
                            </h1>
                        )}

                        {hero.text && (
                            <p class="text-lg sm:text-xl text-gray-300 max-w-2xl leading-relaxed">
                                {hero.text}
                            </p>
                        )}

                        {hero.actions && hero.actions.length > 0 && (
                            <div class="flex flex-wrap gap-4 pt-4">
                                {hero.actions.map((action, idx) => (
                                    <a 
                                        href={action.href} 
                                        class={idx === 0 
                                            ? 'inline-flex items-center px-8 py-3 rounded-full btn-gradient font-semibold text-white neon-hover'
                                            : 'inline-flex items-center px-8 py-3 rounded-full border-2 border-purple-500 font-semibold text-white hover:bg-purple-500/10 transition-all neon-hover'
                                        }
                                    >
                                        {action.text}
                                    </a>
                                ))}
                            </div>
                        )}

                        <div class="pt-8 text-sm text-gray-400 flex items-center gap-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <span>Best Web Developer Award 2021 - By CodeCana</span>
                        </div>
                    </div>

                    <!-- Right column: Avatar with circular rings -->
                    <div class="flex justify-center lg:justify-end">
                        <div class="relative floating">
                            <!-- Outer rotating ring with text -->
                            <div class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-96 lg:h-96">
                                <!-- Gradient ring border -->
                                <div class="absolute inset-0 rounded-full bg-gradient-to-r from-purple-500 via-cyan-400 to-purple-500 p-1 animate-spin-slow">
                                    <div class="w-full h-full rounded-full bg-tech-dark"></div>
                                </div>
                                
                                <!-- Avatar image -->
                                <div class="absolute inset-4 rounded-full overflow-hidden neon-border">
                                    <img 
                                        src={hero.image?.src || '/hero.jpeg'} 
                                        alt={hero.image?.alt || 'Developer Avatar'} 
                                        class="w-full h-full object-cover"
                                    />
                                </div>

                                <!-- Circular text labels -->
                                <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-purple-600 text-white px-4 py-2 rounded-full text-xs font-semibold whitespace-nowrap">
                                    SYSTEM
                                </div>
                                <div class="absolute top-1/4 -right-4 bg-cyan-500 text-white px-4 py-2 rounded-full text-xs font-semibold whitespace-nowrap">
                                    CREATIVE
                                </div>
                                <div class="absolute bottom-1/4 -left-4 bg-purple-600 text-white px-4 py-2 rounded-full text-xs font-semibold whitespace-nowrap">
                                    DEVELOPMENT
                                </div>
                                <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 bg-cyan-500 text-white px-4 py-2 rounded-full text-xs font-semibold whitespace-nowrap">
                                    DESIGN
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Orbes de gradiente decorativos -->
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-purple-600 opacity-10 blur-3xl"></div>
            <div class="absolute -bottom-32 -right-16 w-72 h-72 rounded-full bg-cyan-400 opacity-10 blur-3xl"></div>
        </section>
    )
}

<style>
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    .animate-spin-slow {
        animation: spin-slow 20s linear infinite;
    }
</style>

