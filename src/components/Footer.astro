---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="bg-[#0a0a14] border-t border-purple-500/20 py-8">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
        {
            navLinks.length > 0 && (
                <div class="mb-6 flex flex-wrap gap-x-6 gap-y-2 justify-center">
                    {navLinks.map((link) => (
                        <a class="text-gray-400 hover:text-cyan-400 transition-colors neon-hover" href={link.href}>
                            {link.text}
                        </a>
                    ))}
                </div>
            )
        }
        <div class="pt-6 flex flex-col gap-4 border-t border-purple-500/20 sm:flex-row sm:justify-between sm:items-center">
            {
                socialLinks.length > 0 && (
                    <div class="flex flex-wrap gap-x-4 gap-y-1 justify-center sm:justify-start">
                        {socialLinks.map((link) => (
                            <a
                                class="text-gray-400 hover:text-cyan-400 transition-colors text-sm neon-hover"
                                href={link.href}
                                target="_blank"
                                rel="noopener noreferer"
                            >
                                {link.text}
                            </a>
                        ))}
                    </div>
                )
            }
            <p class="text-sm text-gray-400 text-center sm:text-right">
                &copy; {new Date().getFullYear()}&nbsp;<a class="hover:text-cyan-400 transition-colors" href="/">{siteConfig.title}</a>. All rights reserved.
            </p>
        </div>
    </div>
</footer>
